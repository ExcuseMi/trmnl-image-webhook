# TRMNL Image Webhook Configuration
# Copy this file to .env and update with your settings

# REQUIRED: Your TRMNL webhook URL
WEBHOOK_URL=https://usetrmnl.com/api/plugin_settings/YOUR-UUID/image

# Path to your images directory
IMAGES_PATH=./images

# Display size (TRMNL OG: 800x480, TRMNL Plus: 1280x800)
DISPLAY_WIDTH=800
DISPLAY_HEIGHT=480

# Upload interval in minutes
INTERVAL_MINUTES=10

# Selection mode: random, sequential, shuffle, newest, oldest
SELECTION_MODE=random

# Include subfolders (default: true)
INCLUDE_SUBFOLDERS=true

# Apply Floyd-Steinberg dithering (default: true)
# 1-bit: Dithers between black and white (2 levels)
# 2-bit: Dithers between 4 gray levels (0, 85, 170, 255)
# Recommended: true for both modes - uses full device capabilities
USE_DITHERING=true

# Image label (default: none)
# Options: none, filename, path
# Shows text overlay on image with filename or path
IMAGE_LABEL=none

# Dry run mode - don't upload, just save to data/ (default: false)
DRY_RUN=false